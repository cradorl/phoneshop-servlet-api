<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Phoneshop servlet api training</display-name>

  <context-param>
    <param-name>insertDemoData</param-name>
    <param-value>true</param-value>
  </context-param>

  <listener>
    <listener-class>com.es.phoneshop.web.listener.DemoDataServletContextListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>productList</servlet-name>
    <servlet-class>com.es.phoneshop.web.servlets.ProductListPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>productList</servlet-name>
    <url-pattern>/products</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>searchPage</servlet-name>
    <servlet-class>com.es.phoneshop.web.servlets.AdvancedSearchPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>searchPage</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>dosFilter</filter-name>
    <filter-class>com.es.phoneshop.web.servlets.DosFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>dosFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>productDetails</servlet-name>
    <servlet-class>com.es.phoneshop.web.servlets.ProductDetailsPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>productDetails</servlet-name>
    <url-pattern>/products/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>cart</servlet-name>
    <servlet-class>com.es.phoneshop.web.servlets.CartPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>cart</servlet-name>
    <url-pattern>/cart</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>deleteCartItem</servlet-name>
    <servlet-class>com.es.phoneshop.web.servlets.DeleteCartItemServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>deleteCartItem</servlet-name>
    <url-pattern>/cart/deleteCartItem/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>checkout</servlet-name>
    <servlet-class>com.es.phoneshop.web.servlets.CheckoutPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>checkout</servlet-name>
    <url-pattern>/checkout</url-pattern>
  </servlet-mapping>

  <servlet>
  <servlet-name>miniCart</servlet-name>
  <servlet-class>com.es.phoneshop.web.servlets.MiniCartServlet</servlet-class>
</servlet>
  <servlet-mapping>
    <servlet-name>miniCart</servlet-name>
    <url-pattern>/cart/minicart</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>orderOverview</servlet-name>
    <servlet-class>com.es.phoneshop.web.servlets.OrderOverviewPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>orderOverview</servlet-name>
    <url-pattern>/order/overview/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>priceHistory</servlet-name>
    <servlet-class>com.es.phoneshop.web.servlets.ProductPriceHistoryPageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>priceHistory</servlet-name>
    <url-pattern>/products/priceHistory/*</url-pattern>
  </servlet-mapping>

  <error-page>
    <exception-type>com.es.phoneshop.model.exceptions.ProductNotFoundException</exception-type>
    <location>/WEB-INF/pages/errors/productNotFound.jsp</location>
  </error-page>

  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/pages/errors/error.jsp</location>
  </error-page>

  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/pages/errors/404.jsp</location>
  </error-page>

  <error-page>
    <exception-type>com.es.phoneshop.model.order.OrderNotFoundException</exception-type>
    <location>/WEB-INF/pages/errors/orderNotFound.jsp</location>
  </error-page>

</web-app>
